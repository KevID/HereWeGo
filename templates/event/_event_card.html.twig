<div class="card mb-4">
    {% if event.imageFile is not null %}
        <img class="card-img-top" src="{{ vich_uploader_asset(event, 'imageFile') |
        imagine_filter('event_card_thumb') }}" alt="Card image cap">
    {% else %}
        <img class="card-img-top" src="{{ asset('img/event-card.jpg') |
        imagine_filter('event_card_thumb') }}" alt="Card image cap" style="opacity: 0.25;">
    {% endif %}
    <div class="card-body">
        <h5 class="card-title">
            <a href="{{ path('event', {id: event.id}) }}">
                {{ event.title }}
            </a>
        </h5>
        <p class="card-text">{{ event.start | date("d/m/Y G:i") }}</p>
        <p class="card-text">{{ event.city.name }} ({{ event.city.cp }})</p>
        <p class="card-text" style="background-color: {{ event.category.color }}">{{ event.category }}</p>
    </div>
</div>
